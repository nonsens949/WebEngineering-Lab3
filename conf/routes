# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       	controllers.Application.index()

#Task pages
GET		/login						controllers.Application.authentication()
GET		/registration				controllers.Application.registration()
GET		/jeopardy					controllers.Application.jeopardy()
GET 	/winner						controllers.Application.showWinner()
POST	/question					controllers.Application.showQuestion()
POST 	/answerQuestion				controllers.Application.answerQuestion()
POST    /login/submit               controllers.Application.authenticationSubmit()
POST    /registration               controllers.Application.registrationSubmit()
POST 	/jeopardy/newGame			controllers.Application.newGame()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

